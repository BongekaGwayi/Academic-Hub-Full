@model User
@{
    ViewData["Title"] = "Login";
}
<div class="card-container">
    <div class="card-item image-bg image-students-in-uniform">
    </div>
    <div class="card-item bg-light">
        <div class="form-group row">
            <h1>Login</h1>
        </div>
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <form asp-controller="Account" asp-action="Login" method="post">
            <div class="form-group row">
                <label asp-for="Username" class="control-label">Email</label>
                <input asp-for="Username" class="form-control" />
                <span asp-validation-for="Username" class="text-danger"></span>
            </div>
            <div class="form-group row">
                <label asp-for="Password">Password</label>
                <input asp-for="Password" class="form-control" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class="form-group row">
                <input type="checkbox" title="Remember Me" asp-for="RememberMe"
                       class="form-check" />
                <label asp-for="RememberMe" class="m-1">Remember Me:</label>
            </div>
            <div class="form-group row">
                <button type="submit" class="btn btn-primary">Login</button>
            </div>
            <div class="form-group row">
                <a asp-controller="Account" asp-action="ForgotPassword">
                    Forgot your password?
                </a>
            </div>
            <div class="form-group row">
                <a asp-controller="Account" asp-action="Register">
                    Register as new user
                </a>
            </div>
            <div class="form-group row">
                <a asp-controller="Account" asp-action="ResendConfirmation">
                    Resend email confirmation
                </a>
            </div>
        </form>
    </div>
</div>