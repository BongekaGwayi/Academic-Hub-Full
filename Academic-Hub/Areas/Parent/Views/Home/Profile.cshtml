@model ParentUser
@{
    ViewData["Title"] = "Profile";
}
<div>
    <h1>Profile</h1>
</div>
<div class="main-card-layout">
    <div class="main-card-item">
        <div class="card-item-header">
            <h4>Change Details</h4>
        </div>
        <div class="card-item-body">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <form asp-controller="Home" asp-action="UpdateSettings">
                <div class="form-group row">
                    <input type="hidden" value="@Model.ParentId" />
                    <div class="form-group col">
                        <label asp-for="FirstName" class="control-label">First Name</label>
                        <input asp-for="FirstName" class="form-control" value="" />
                        <span asp-validation-for="FirstName" class="text-danger"></span>
                    </div>
                    <div class="form-group col">
                        <label asp-for="LastName" class="control-label">Last Name</label>
                        <input asp-for="LastName" class="form-control" value="" />
                        <span asp-validation-for="LastName" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group row">
                    <div class="form-group col">
                        <label asp-for="Email" class="control-label">E-mail</label>
                        <input asp-for="Email" class="form-control" value="" />
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>
                    <div class="form-group col">
                        <label asp-for="PhoneNumber" class="control-label">Phone Number</label>
                        <input asp-for="PhoneNumber" class="form-control" value="" />
                        <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group">
                    <button type="submit" class="btn btn-primary">Update Settings</button>
                </div>
            </form>
        </div>
    </div>
    <div class="secondary-card-item">
        <div class="card-item-header">
            <h4>Details</h4>
        </div>
        <div class="card-item-body">
            <ul>
                <li>Name: @Model.FirstName</li>
                <li>Last Name: @Model.LastName</li>
                <li>Email: @Model.Email</li>
                <li>Phone: @Model.PhoneNumber</li>
            </ul>
        </div>
    </div>
</div>
