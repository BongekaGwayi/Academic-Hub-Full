@model NotificationsViewModel
@{
    ViewData["Title"] = "Notification";
}
<h1 class="text-center">Notification</h1>
<div class="main-card-layout">
    <div class="main-card-item">
        <div class="card-item-section">
            <div class="card-item-header">
                <h5 >
                    <span class="primary-background-color roundy">
                        Announcements
                    </span>
                </h5>
            </div>
            <div class="card-item-body">
                @if (Model.announcements.Count > 0)
                {
                    @foreach (var a in Model.announcements)
                    {
                        <div class="card-item-body-top">
                            <h4>@a.GetAnnouncerName(a.Announcer)</h4>
                        </div>
                        <div class="card-item-body-middle cut-text">
                            @a.Message
                        </div>
                    }
                }
                else{
                    <div class="card-item-body-top">
                        <h4 class="primary-background-color roundy">No announcement</h4>
                        </div>
                }
            </div>
        </div>
        <div class="card-item-section">
            <div class="card-item-header">
                <h5>
                    <span class="primary-background-color roundy">
                        Upcoming Events
                    </span>
                </h5>
            </div>
            <div class="card-item-body">
                @if (Model.subjectEvents.Count > 0)
                {
                    @foreach (var e in Model.subjectEvents)
                    {
                        <div class="card-item-body-top">
                            <h4>@e.EventType</h4>
                        </div>
                        <div class="card-item-body-middle">
                            @e.EventMessage
                        </div>
                    }
                }
                else{
                    <div class="card-item-body-top">
                        <h4>No events available</h4>
                    </div>
                }
            </div>
        </div>
    </div>
    <div class="secondary-card-item">
        <div>
            <div class="card-item-header">
                <h3 class="text-center">
                    Meeting Requests
                </h3>
            </div>
            <div class="card-item-body">
                <div class="card-item-body-top">
                    Head of Department
                </div>
                <div class="">

                </div>
            </div>
            <div class="card-item-body">
                <div class="card-item-body-top">
                    Teacher
                </div>
                <div class="">
                </div>
            </div>
        </div>
    </div>
</div>

