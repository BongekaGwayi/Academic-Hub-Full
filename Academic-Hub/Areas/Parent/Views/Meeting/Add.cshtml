@model MeetingRequest
@{
    ViewData["Title"] = "Request Meeting";
}
<h1>Meeting Form</h1>
<div class="main-card-item" style="width: 95%;">
    <div class="card-item-body">
        <div class="card-item-body-body">
            <div class="card-item-body-top">
                Request Meeting
            </div>
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <form asp-controller="Meeting" asp-action="Add" method="post">
                <div class="form-group row m-0">
                    <label asp-for="Subject" class="control-label">Subject</label>
                    <input asp-for="Subject" class="form-control" />
                    <span asp-validation-for="Subject" class="text-danger"></span>
                </div>
                <div class="form-group row m-0">
                    <label asp-for="Body" class="control-label">Message</label>
                    <textarea asp-for="Body" class="form-control"></textarea>
                    <span asp-validation-for="Body" class="text-danger"></span>
                </div>
                <input type="hidden" asp-for="CreatedDate" value="@DateTime.Now" />
                <input type="hidden" asp-for="Requester" value="@UserLogger.GetLoggedParent().ParentId" />
                <div class="form-group row m-0">
                    <button type="submit" class="btn btn-primary">Send</button>
                </div>
            </form>
        </div>
    </div>
    
</div>
